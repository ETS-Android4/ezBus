<resources>

    <!-- Base application themes -->

    <!-- blue/day mode theme -->
    <style name="App.Blue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#303F4B</item>
        <item name="colorPrimaryDark">#303F4B</item>
        <item name="colorAccent">#354C5E</item>
        <item name="colorBackground">#fefefe</item>
        <item name="colorCard">#efefef</item>
        <item name="colorText">#808080</item>
        <item name="colorTextHint">#aaa</item>
        <item name="colorTint">#ffffff</item>
        <item name="colorButton">#388E3C</item>
        <item name="colorNavItem">#303F4B</item>
        <item name="android:actionBarSize">55dp</item>
        <item name="android:fontFamily">@font/argentum</item>
        <item name="android:actionMenuTextColor">#808080</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <style name="NoApp.Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#303F4B</item>
        <item name="colorPrimaryDark">#303F4B</item>
        <item name="colorAccent">#354C5E</item>
        <item name="colorBackground">#f1f1f1</item>
        <item name="colorCard">#efefef</item>
        <item name="colorText">#808080</item>
        <item name="colorTextHint">#aaa</item>
        <item name="colorTint">#ffffff</item>
        <item name="colorButton">#388E3C</item>
        <item name="colorActiveTab">#303F4B</item>
        <item name="colorInactiveTab">#999999</item>
        <item name="colorNavItem">#303F4B</item>
        <item name="toolbarStyle">@style/ToolBar.Blue</item>
        <item name="android:fontFamily">@font/argentum</item>
        <item name="android:actionMenuTextColor">#808080</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- green/day mode theme -->
    <style name="App.Green" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#096156</item>
        <item name="colorPrimaryDark">#096156</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">#fefefe</item>
        <item name="colorCard">#efefef</item>
        <item name="colorText">#808080</item>
        <item name="colorTextHint">#aaa</item>
        <item name="colorTint">#ffffff</item>
        <item name="colorButton">#388E3C</item>
        <item name="colorNavItem">#096156</item>
        <item name="android:actionBarSize">55dp</item>
        <item name="android:actionMenuTextColor">#808080</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <style name="NoApp.Green" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#096156</item>
        <item name="colorPrimaryDark">#096156</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">#fefefe</item>
        <item name="colorCard">#efefef</item>
        <item name="colorText">#808080</item>
        <item name="colorTextHint">#aaa</item>
        <item name="colorTint">#ffffff</item>
        <item name="colorButton">#388E3C</item>
        <item name="colorActiveTab">#096156</item>
        <item name="colorInactiveTab">#999999</item>
        <item name="colorNavItem">#096156</item>
        <item name="toolbarStyle">@style/ToolBar.Green</item>
        <item name="android:fontFamily">@font/argentum</item>
        <item name="android:actionMenuTextColor">#808080</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- dark/night mode theme -->
    <style name="App.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#202020</item>
        <item name="colorPrimaryDark">#202020</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">#303030</item>
        <item name="colorCard">#202020</item>
        <item name="colorText">#ffffff</item>
        <item name="colorTextHint">#ccc</item>
        <item name="colorTint">#ffffff</item>
        <item name="colorButton">#000</item>
        <item name="colorNavItem">#fcfcfc</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <style name="NoApp.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#202020</item>
        <item name="colorPrimaryDark">#202020</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">#303030</item>
        <item name="colorCard">#202020</item>
        <item name="colorText">#ffffff</item>
        <item name="colorTextHint">#ccc</item>
        <item name="colorTint">#ffffff</item>
        <item name="colorButton">#000</item>
        <item name="colorActiveTab">#eaeaea</item>
        <item name="colorInactiveTab">#9a9a9a</item>
        <item name="colorNavItem">#fcfcfc</item>
        <item name="toolbarStyle">@style/ToolBar.Dark</item>
        <item name="android:textColor">#eaeaea</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- ToolBar themes -->

    <style name="ToolBar.Blue" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#F1F1F1</item>
        <item name="android:textColorSecondary">#F1F1F1</item>
        <item name="android:background">#2A3842</item>
        <item name="actionMenuTextColor">#F1F1F1</item>
    </style>
    <style name="ToolBar.Green" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#F1F1F1</item>
        <item name="android:textColorSecondary">#F1F1F1</item>
        <item name="android:background">#096156</item>
        <item name="actionMenuTextColor">#F1F1F1</item>
    </style>
    <style name="ToolBar.Dark" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#F1F1F1</item>
        <item name="android:textColorSecondary">#F1F1F1</item>
        <item name="android:background">#202020</item>
        <item name="actionMenuTextColor">#F1F1F1</item>
    </style>


    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="App.Blue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="App.Green.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>