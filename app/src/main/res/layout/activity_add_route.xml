<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".management.AddRouteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundcolor"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundcolor"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Nome Tratta"
                android:textColorHint="?attr/textColorHint"
                android:textColor="?attr/textcolor"
                android:inputType="text" />

            <TextView
                android:id="@+id/primaStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fermata di partenza" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/secondaStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fermata di destinazione" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/saveRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salva" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>