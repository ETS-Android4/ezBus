<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorCard"
    android:fillViewport="true"
    android:gravity="fill"
    tools:context="com.ezbus.management.ManagerFragment">

    <ImageView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:src="@drawable/rectangle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Menu per la gestione degli autobus e degli abbonamenti dell'azienda, con la possibilitÃ  di aggiungere, modificare o rimuovere elementi"
                android:textSize="18sp" />

            <Button
                android:id="@+id/routeManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestione Tratte" />

            <Button
                android:id="@+id/passManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestione Abbonamenti" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>