<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezbus.management.ManagerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manager Aziendale"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aggiungi Nuova Tratta" />

        <Button
            android:id="@+id/editRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifica Tratte" />

        <Button
            android:id="@+id/viewRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vedi Tratte" />

        <Button
            android:id="@+id/addPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aggiungi Abbonamento" />

        <Button
            android:id="@+id/editPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifica Abbonamento" />

        <Button
            android:id="@+id/viewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visualizza Abbonamenti" />


    </LinearLayout>
</FrameLayout>
