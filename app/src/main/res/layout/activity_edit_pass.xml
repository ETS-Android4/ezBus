<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".management.EditPassActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackground"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="?attr/colorBackground"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nomePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Nome Abbonamento"
                android:inputType="text"
                android:textColor="?attr/colorText"
                android:textColorHint="?attr/colorTextHint" />

            <EditText
                android:id="@+id/cittaPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="CittÃ "
                android:inputType="text"
                android:textColor="?attr/colorText"
                android:textColorHint="?attr/colorTextHint" />

            <EditText
                android:id="@+id/durataPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Durata (Giorni)"
                android:inputType="number"
                android:textColor="?attr/colorText"
                android:textColorHint="?attr/colorTextHint" />

            <EditText
                android:id="@+id/prezzoPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Prezzo"
                android:inputType="numberDecimal"
                android:textColor="?attr/colorText"
                android:textColorHint="?attr/colorTextHint" />

            <Button
                android:id="@+id/salvaPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salva Modifiche" />

            <Button
                android:id="@+id/cancellaPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elimina Abbonamento" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>