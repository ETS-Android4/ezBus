<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorCard"
    android:fillViewport="true"
    android:gravity="fill"
    tools:context="com.ezbus.client.BuyFragment">

    <ImageView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:src="@drawable/rectangle"
        android:elevation="10dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Acquista tessere o abbonamenti per poter viaggiare regolarmente sugli autobus ezBus. L'acquisto di biglietti deve essere effettuato sulla mappa."
                android:textColor="?attr/colorText"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acquista Tessera" />

            <Button
                android:id="@+id/buyPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acquista Abbonamento" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Credito attuale:"
                android:textColor="?attr/colorText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 â‚¬"
                android:textColor="?attr/colorText"
                android:textSize="18sp" />

            <Button
                android:id="@+id/recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ricarica Credito" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>