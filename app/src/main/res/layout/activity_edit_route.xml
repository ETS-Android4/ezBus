<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".management.EditRouteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundcolor"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/backgroundcolor"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nomeTratta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="Nome Tratta"
                android:textColorHint="?attr/textColorHint"
                android:textColor="?attr/textcolor"
                android:inputType="text" />

            <TextView
                android:id="@+id/primaFermata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fermata di partenza" />

            <Spinner
                android:id="@+id/scelta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/secondaFermata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fermata di destinazione" />

            <Spinner
                android:id="@+id/scelta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/aggiungiFermata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aggiungi fermata" />

            <Button
                android:id="@+id/salvaTratta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salva Modifiche" />

            <Button
                android:id="@+id/eliminaTratta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elimina Tratta" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>